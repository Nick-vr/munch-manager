---
import { ViewTransitions } from 'astro:transitions'

const { title } = Astro.props
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Een Progressive Web App om op een eenvoudige manier je weekmenu te maken"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <meta name="theme-color" content="#111425" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" type="image/png" href="/mm-192x192.png" />
    <title>{title}</title>
    <ViewTransitions />
    <style>
      body {
        background-color: #111425;
        color: whitesmoke;
      }
    </style></head
  >

  <body>
    <main>
      <slot />
    </main>
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js')
      }
    </script>
  </body>
</html>
